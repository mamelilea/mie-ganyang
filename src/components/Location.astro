<!-- Location Section -->
<section class="py-20" id="lokasi">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div
            class="bg-surface rounded-3xl overflow-hidden border border-white/5 shadow-2xl"
        >
            <div class="grid grid-cols-1 lg:grid-cols-2">
                <!-- Map Side (Embedded) -->
                <div
                    class="h-[400px] lg:h-auto bg-[#242424] relative flex items-center justify-center group overflow-hidden"
                >
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m17!1m12!1m3!1d3956.4246554677443!2d112.67873407500119!3d-7.418164992592242!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m2!1m1!2zN8KwMjUnMDUuNCJTIDExMsKwNDAnNTIuNyJF!5e0!3m2!1sid!2sid!4v1766620360922!5m2!1sid!2sid"
                        width="100%"
                        height="100%"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade"
                        class="absolute inset-0 grayscale hover:grayscale-0 transition-all duration-500"
                    ></iframe>
                </div>
                <!-- Info Side -->
                <div class="p-8 md:p-12 flex flex-col justify-center">
                    <h2 class="text-3xl font-display font-bold text-white mb-8">
                        Kunjungi Outlet Kami
                    </h2>
                    <div class="space-y-6">
                        <div class="flex gap-4 items-start">
                            <div
                                class="bg-primary/10 p-3 rounded-full text-primary shrink-0"
                            >
                                <span class="material-symbols-outlined"
                                    >storefront</span
                                >
                            </div>
                            <div>
                                <h4 class="text-white font-bold text-lg">
                                    Alamat
                                </h4>
                                <p class="text-text-secondary">
                                    Perumahan Graha Properindo Blok CF No. 6,
                                    Kebonagung, Kec. Sukodono, Kabupaten
                                    Sidoarjo, Jawa Timur 61258
                                </p>
                            </div>
                        </div>
                        <div class="flex gap-4 items-start">
                            <div
                                class="bg-primary/10 p-3 rounded-full text-primary shrink-0"
                            >
                                <span class="material-symbols-outlined"
                                    >schedule</span
                                >
                            </div>
                            <div>
                                <h4 class="text-white font-bold text-lg">
                                    Jam Buka
                                </h4>
                                <p class="text-text-secondary">
                                    Setiap Hari: 10.00 - 16.00 WIB
                                </p>
                                <p class="text-primary text-sm font-bold mt-1">
                                    Buka Sekarang
                                </p>
                            </div>
                        </div>
                    </div>
                    <a
                        href="https://maps.app.goo.gl/r4Kh7m8GWjsPyhkP9"
                        target="_blank"
                        class="mt-8 w-full py-4 bg-primary text-white rounded-xl font-bold text-base flex items-center justify-center gap-2 transition-colors hover:bg-red-600 shadow-lg shadow-primary/20"
                    >
                        <span class="material-symbols-outlined">directions</span
                        >
                        Petunjuk Arah Google Maps
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
